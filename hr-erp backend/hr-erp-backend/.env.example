# Szerver beállítások
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Adatbázis konfiguráció (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hr_erp_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Authentikáció
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS beállítások
CORS_ORIGIN=http://localhost:3001,http://localhost:19006

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Fájl feltöltés
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AWS S3 (ha használod)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=hr-erp-uploads
AWS_REGION=eu-central-1

# Email konfiguráció
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourcompany.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=HR-ERP System <noreply@yourcompany.com>

# Push értesítések (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key

# Egyéb
LOG_LEVEL=info
